{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "myd/accordion-block",
	"version": "0.1.4",
	"title": "Accordion Item",
	"category": "text",
	"icon": "arrow-down",
    "parent": ["myd/accordion-group"],
	"textdomain": "accordion-block",
	"description": "A simple and customizable accordion block.",
	"example": {},
	"attributes": {
		"title": {
			"type": "string",
			"default": "Accordion Title"
		},
		"iconType": {
			"type": "string",
			"default": "chevron"
		},
		"customIcon": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"html": false,
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"fontWeight": true
		},
		"color": {
			"background": true,
			"gradient": true,
			"text": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"shadow": true,
		"__experimentalBorder": {
			"color": true,
			"width": true,
			"radius": true,
			"style": true,
			"__experimentalDefaultControls": {
				"radius": true,
				"color": true,
				"width": true,
				"style": true
			}
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}